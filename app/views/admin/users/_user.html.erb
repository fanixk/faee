	<% end %>

	<%= render 'user_addresses' %>

  <%= link_to admin_users_path, :class => 'btn btn-inverse' do %>
	  <i class="icon-chevron-left icon-white"></i> <%= t('.Back to Users') %>
	<% end %>
	
</div>



