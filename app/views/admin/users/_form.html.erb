<%= form_for [:admin, @user], html: { class: 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', :target => @user, :name => "user" %>
  
  <fieldset>

  <div class="control-group">
    <%= f.label :first_name, t('.First Name'), class: "control-label" %>
    <div class="controls">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, t('.Last Name'), class: "control-label" %>
    <div class="controls">
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, t('.E-Mail'), class: "control-label" %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :username, t('.Username'), class: "control-label" %>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, t('.Password'), class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :autocomplete => "off" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, t('.Password Confirmation'), class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <% if current_user.id != @user.id %>
    <div class="control-group">
      <%= f.label :admin, t('.Admin?'), class: "control-label" %>
      <div class="controls">
        <%= f.check_box :admin %>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => 'btn btn-success', :value => t('.Submit') %>
    </div>
  </div>

  <div class="control-group">
    <%= link_to admin_users_path, :class => 'btn btn-inverse' do %>
      <i class="icon-chevron-left icon-white"></i> <%= t('.Back to Users') %>
    <% end %>
  </div>

  </fieldset>
  
<% end %>
