<%= render 'shared/notice_messages' %>

<%= link_to new_admin_category_path, :class => "btn btn-large btn-new-custom"  do %>
  <i class="icon-plus  icon-white"></i> <%= t('.New Category') %>
<% end %>
<button class="search-button btn btn-large btn-new-custom"><i class="icon-search icon-white"></i> <%= t('.Search / Sort') %></button>

<br /><br />

<%= render 'admin/shared/search', search: @search, url: search_admin_categories_path %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= sort_link @search, :name, t('.Name') %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="span10"><%= category.name %></td>
        <td class="text-center">
          <%= link_to edit_admin_category_path(category), :class => 'icon-edit-custom', :title => I18n.t('.Edit') do %>
            <i class="icon-edit"></i>
          <% end %>
        </td>
        <td class="text-center">
          <%= link_to [:admin, category], :confirm  => 'Are you sure?', :method  => :delete,  :class => "icon-delete-custom", :title => I18n.t('.Delete') do %>
            <i class="icon-minus-sign"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>  
</table>

<hr />
<%= paginate @categories %>