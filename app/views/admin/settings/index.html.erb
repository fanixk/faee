<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= t('.Key') %></th>
      <th><%= t('.Value') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= t('.'+setting.key) %></td>
        <td class="span7"><%= setting.value %></td>
        <td>
          <%= link_to edit_admin_setting_path(setting), :class => 'icon-edit-custom', :title => I18n.t('.Edit') do %>
            <i class="icon-edit"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>  
</table>

<hr />