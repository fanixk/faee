<legend><%= t('.Your Addresses') %></legend>
<!-- notice msgs taken from app layout -->
<%= link_to new_address_path, :class => "btn btn-large btn-new-custom"  do %>
  <i class="icon-plus  icon-white"></i> <%= t('.New Address') %>
<% end %>

<br /><br />
<%= paginate @addresses %>
<% if !@addresses.blank? %>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= t('.Name') %></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td class="span10"><%= address.label %></td>
          <td>
            <%= link_to edit_address_path(address), :class => 'icon-edit-custom', :title => I18n.t('.Edit') do %>
              <i class="icon-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to address, :confirm  => 'Are you sure?', :method  => :delete,  :class => "icon-delete-custom", :title => I18n.t('.Delete') do %>
              <i class="icon-minus-sign"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>  
  </table>
<% else %>
  <div class="well lead info-sign">
    <i class="icon icon-info-sign"></i> 
    <%= t(".You haven't created an address yet") %>
  </div>
<% end %>
