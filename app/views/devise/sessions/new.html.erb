<legend><%= t('.Sign in') %></legend>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>
  
  <fieldset>

  <div class="control-group">
    <%= f.label :login, t('.Username or Email'), class: "control-label" %>
    <div class="controls">
      <%= f.text_field :login, :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, t('.Password'), class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      <%= f.label :remember_me, t('.Remember Me'), class: "control-label" %>
      <div class="controls">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => 'btn btn-success', :value => t('.Login') %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= render "devise/shared/forgot_links" %>
    </div>
  </div>

  </fieldset>

<% end %>