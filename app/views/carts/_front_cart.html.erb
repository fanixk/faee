<div class="inner-cart" data-count="<%= cart.line_items.count %>">
  
  <ul class="nav nav-list">
    <li class="nav-header cart-title">
    <i class="icon icon-shopping-cart"></i> <%= t(".Your Cart") %>
    </li>
    <li class="divider"></li>
  </ul>

  <div class="clearfix"></div>

  <div class="well well-small" style="text-align: center">
    <h5><%= cart.item_count %> <%= t(".item(s) in cart") %></h5>
    <p class="lead cart-total"><strong><%= number_to_currency(cart.total_price, :unit => "â‚¬ ") %></strong></p>
  </div>

  <div>
    <%= link_to cart, method: :delete, confirm: 'Are you sure?', :class => 'btn btn-block' do %>
     <i class="icon-remove"></i> <%=  t(".Empty cart") %>
    <% end %>
  </div>
  <div>
    <%= link_to cart_path(cart), :class => "btn btn-block btn-primary" do %>
      <%= t('.Checkout') %> <i class="icon-chevron-right"></i>
    <% end %>
  </div>

</div>